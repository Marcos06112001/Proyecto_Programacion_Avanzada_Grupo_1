@model IEnumerable<Proyecto_Programacion_Grupo_1.Models.Compra>

@{
    ViewData["Title"] = "Lista de Compras";
}

<div class="card shadow mt-4">
    <div class="card-header bg-primary text-white py-3">
        <h3 class="m-0"><i class="fas fa-shopping-cart me-2"></i>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus-circle me-1"></i> Nueva Compra
            </a>
        </p>

        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Usuario</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Fecha</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Usuario.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Producto.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                        <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.CompraID" class="btn btn-sm btn-warning" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.CompraID" class="btn btn-sm btn-info" title="Detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CompraID" class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>