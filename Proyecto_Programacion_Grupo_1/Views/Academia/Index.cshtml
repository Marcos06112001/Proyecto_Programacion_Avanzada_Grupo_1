@model IEnumerable<Proyecto_Programacion_Grupo_1.Models.Academia>

@{
    ViewData["Title"] = "Academia";
}

<h1>Academia</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Academia</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.AcademiaID" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AcademiaID" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AcademiaID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
