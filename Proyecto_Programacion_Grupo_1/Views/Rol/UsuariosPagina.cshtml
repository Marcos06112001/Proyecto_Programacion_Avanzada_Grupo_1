@{
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}
@{
    ViewData["Title"] = "Inicio Usuario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 text-center">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h2 class="display-5 fw-bold text-primary mb-3">Bienvenido, Usuario</h2>

                    <div class="alert alert-info mt-4" role="alert">
                        ¡Disfruta de tu experiencia en nuestro sitio web!
                    </div>

                    <!-- Menú personalizado del usuario -->
                    <div class="row justify-content-center mt-4">
                        <div class="col-md-6">
                            <ul class="list-group text-start">
                                <li class="list-group-item">
                                    <a asp-controller="Producto" asp-action="Catalogo" class="text-decoration-none text-dark">
                                        <i class="fas fa-box me-2 text-primary"></i> Productos
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Membresia" asp-action="VerMembresias" class="text-decoration-none text-dark">
                                        <i class="fas fa-id-card me-2 text-primary"></i> Membresías
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Carrito" asp-action="VerCarrito" class="text-decoration-none text-dark">
                                        <i class="fas fa-shopping-cart me-2 text-primary"></i> Compras
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a asp-controller="Pago" asp-action="RealizarPago" class="text-decoration-none text-dark">
                                        <i class="fas fa-credit-card me-2 text-primary"></i> Pagos
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Botón de Cerrar Sesión -->
                    <a asp-controller="Rol" asp-action="Seleccionar" class="btn btn-danger mt-4">
                        <i class="fas fa-sign-out-alt me-2"></i> Cerrar Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>