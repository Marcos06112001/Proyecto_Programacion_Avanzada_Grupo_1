@model Proyecto_Programacion_Grupo_1.Models.ReservaClase

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UsuarioID" class="control-label"></label>
        <select asp-for="UsuarioID" asp-items="ViewBag.Usuarios" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="ClaseID" class="control-label"></label>
        <select asp-for="ClaseID" asp-items="ViewBag.Clases" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="FechaReserva" class="control-label"></label>
        <input asp-for="FechaReserva" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
</form>