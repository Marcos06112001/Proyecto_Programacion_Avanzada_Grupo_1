@model IEnumerable<Proyecto_Programacion_Grupo_1.Models.ReservaClase>

@{
    ViewData["Title"] = "Reservas";
}

<h1>Reservas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Reserva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReservaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaReserva)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservaID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaseID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaReserva)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReservaID" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReservaID" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReservaID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
