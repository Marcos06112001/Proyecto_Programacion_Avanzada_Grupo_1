<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportWell</title>

    <!-- Bootstrap y FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bg-primary text-white py-3 shadow">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h4 mb-0">
                <i class="fas fa-dumbbell me-2"></i>SportWell - Usuario
            </h1>
            <a asp-controller="Rol" asp-action="Seleccionar" class="btn btn-danger">
                <i class="fas fa-sign-out-alt me-2"></i> Cerrar Sesión
            </a>
        </div>
    </header>

    <nav class="bg-light border-bottom py-2">
        <div class="container d-flex gap-4">
            <a asp-controller="Producto" asp-action="Catalogo" class="nav-link text-dark">
                <i class="fas fa-box me-1 text-primary"></i> Productos
            </a>
            <a asp-controller="Membresia" asp-action="VerMembresias" class="nav-link text-dark">
                <i class="fas fa-id-card me-1 text-primary"></i> Membresías
            </a>
            <a asp-controller="Carrito" asp-action="VerCarrito" class="nav-link text-dark">
                <i class="fas fa-shopping-cart me-1 text-primary"></i> Compras
            </a>
            <a asp-controller="Pago" asp-action="RealizarPago" class="nav-link text-dark">
                <i class="fas fa-credit-card me-1 text-primary"></i> Pagos
            </a>
        </div>
    </nav>

    <main role="main" class="container my-5">
        @RenderBody()
    </main>

    <footer class="bg-light text-center text-muted py-3 border-top">
        © 2025 - SportWell - <a href="#" class="text-decoration-none">Privacidad</a>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>