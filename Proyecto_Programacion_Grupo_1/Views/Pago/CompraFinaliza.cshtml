@{
    Layout = "";
    ViewData["Title"] = "Compra Finalizada";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />

    <style>
        body {
            background: linear-gradient(to right, #dfe9f3, #ffffff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .thankyou-card {
            max-width: 600px;
            width: 100%;
            background: white;
            border-radius: 1rem;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            padding: 40px 30px;
            text-align: center;
        }

        .thankyou-icon {
            font-size: 5rem;
            color: #28a745;
            margin-bottom: 20px;
        }

        h2 {
            color: #2c3e50;
            font-weight: 600;
        }

        .lead {
            color: #6c757d;
            margin-top: 10px;
        }

        .btn-primary {
            border-radius: 30px;
            padding: 10px 25px;
            background-color: #6f42c1;
            border: none;
            font-weight: 500;
        }

            .btn-primary:hover {
                background-color: #5a34a3;
            }
    </style>
</head>
<body>
    <div class="thankyou-card">
        <i class="bi bi-check-circle-fill thankyou-icon"></i>
        <h2>¡Gracias por tu compra!</h2>
        <p class="lead">Tu pago ha sido procesado con éxito.</p>

        <a href="@Url.Action("UsuariosPagina","Rol")" class="btn btn-primary mt-4">
            <i class="bi bi-house-door-fill"></i> Volver al Inicio
        </a>
    </div>

    <!-- Bootstrap JS (opcional si no usás componentes JS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
