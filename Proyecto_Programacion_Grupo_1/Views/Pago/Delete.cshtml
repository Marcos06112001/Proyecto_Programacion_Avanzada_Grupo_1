@model Proyecto_Programacion_Grupo_1.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h1>Eliminar Pago</h1>

<h3>¿Estás seguro que deseas eliminar este pago?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class="col-sm-2">
            Método de Pago
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MetodoPago)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaPago)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PagoID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>