@{
    Layout = null;
}
@model Proyecto_Programacion_Grupo_1.Models.Pago

@{
    ViewData["Title"] = "Realizar Pago";
}

<style>
    .container-pago {
        background-color: white;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        max-width: 600px;
        margin: auto;
    }

    h2 {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 25px;
    }

    .form-group label {
        font-weight: 500;
        color: #2d3436;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn-primary {
        background-color: #6c5ce7;
        border-color: #6c5ce7;
        border-radius: 20px;
        font-weight: 500;
        padding: 10px 20px;
    }

        .btn-primary:hover {
            background-color: #5649c0;
            border-color: #5649c0;
        }

    .alert-success {
        border-radius: 10px;
        font-weight: 500;
    }
</style>

<div class="container-pago">
    <h2><i class="bi bi-credit-card"></i> Realizar un Pago</h2>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success"><i class="bi bi-check-circle"></i> @TempData["Mensaje"]</div>
    }

    <form asp-action="RealizarPago" method="post" novalidate>
        <div class="form-group mb-3">
            <label asp-for="Monto"></label>
            <input asp-for="Monto" class="form-control" />
            <span asp-validation-for="Monto" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="MetodoPago">Método de Pago</label>
            <select asp-for="MetodoPago" asp-items="ViewBag.MetodosPago" class="form-control"></select>
            <span asp-validation-for="MetodoPago" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-credit-card-2-front"></i> Pagar
        </button>
    </form>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}